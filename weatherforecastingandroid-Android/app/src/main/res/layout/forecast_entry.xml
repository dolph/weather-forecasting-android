<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="90dp">

    <ImageView
        app:srcCompat="@drawable/ic_weather"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:id="@+id/imageView"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/daily_narrative"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:textSize="10sp"
        android:layout_height="40dp"
        android:textColor="@color/textColorTertiary"/>

    <TextView
        android:text="--"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/daily_temp"
        android:gravity="center_vertical"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/daily_narrative"
        android:layout_alignEnd="@+id/daily_narrative"
        android:textColor="@color/textColorTertiary"/>

    <TextView
        android:text="--"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/daily_temp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toLeftOf="@+id/daily_temp"
        android:layout_centerHorizontal="true"
        android:id="@+id/day"
        android:gravity="center_vertical"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textColor="@color/textColorTertiary"/>

</RelativeLayout>